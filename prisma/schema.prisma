generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  admin
  user
  guest
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     UserRole @default(guest)
}

model Table {
  id            Int       @id @default(autoincrement())
  region        String
  oblast        String
  cadastral     String
  composition   String?
  area          Float?
  ngo           Float?
  owner         String?
  contract      Int?
  contract_date DateTime?
  extract       Int?
  extract_date  DateTime?
  document      String?
  expenses      Float?
}
